-- Table for your skills
CREATE TABLE `skills` (
  `id` INT AUTO_INCREMENT PRIMARY KEY,
  `category` VARCHAR(100) NOT NULL,
  `name` VARCHAR(100) NOT NULL
);

-- Pre-fill with some example skills
INSERT INTO `skills` (`category`, `name`) VALUES
('Programming', 'C++'),
('Programming', 'Python'),
('Programming', 'JavaScript'),
('Tools & Frameworks', 'React'),
('Tools & Frameworks', 'Node.js'),
('Tools & Frameworks', 'Flutter'),
('Cloud & AI', 'TensorFlow'),
('Cloud & AI', 'OpenAI APIs');

-- Table for your projects
CREATE TABLE `projects` (
  `id` INT AUTO_INCREMENT PRIMARY KEY,
  `title` VARCHAR(255) NOT NULL,
  `description` TEXT,
  `technologies` VARCHAR(255),
  `github_link` VARCHAR(255),
  `live_link` VARCHAR(255),
  `image` VARCHAR(255)
);

-- Table for your experience & achievements
CREATE TABLE `experience` (
  `id` INT AUTO_INCREMENT PRIMARY KEY,
  `title` VARCHAR(255) NOT NULL,
  `description` TEXT
);

-- Table for the admin user
CREATE TABLE `admin` (
  `id` INT AUTO_INCREMENT PRIMARY KEY,
  `username` VARCHAR(50) NOT NULL,
  `password` VARCHAR(255) NOT NULL
);

