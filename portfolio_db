-- Table for general information (name, tagline, social links, etc.)
CREATE TABLE `general_info` (
  `id` INT AUTO_INCREMENT PRIMARY KEY,
  `item_key` VARCHAR(50) UNIQUE NOT NULL,
  `item_value` TEXT
);

-- Pre-fill general info with placeholders
